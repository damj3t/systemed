<?xml version="1.0" encoding="utf-8"?>
<form>
		<fieldset name="profesional">
		<field name="id" 
		type="text" 
		default="0" 
		label="JGLOBAL_FIELD_ID_LABEL" 
		required="true"
        readonly="true" 
        class="readonly" />

		<field
		            name="profesional_id"
		            type="sql"
		            multiple="false"
		            size="1"
		            label="JFIELD_PROFESIONAL_LABEL"
		            description="JFIELD_PROFESIONAL_DESC"
		            query="select id, nombre from #__tm_profesionales"
		            key_field="id"
		            value_field="nombre"
		            default="0"
					required="true"
		            >
		                <option value="">JOPTION_SELECT_ID</option>
		        </field>
	  
		</fieldset>
		<fieldset name="dias">
					<field name="lu" 
						type="list" 
						default="0" 
						label="JGLOBAL_FIELD_LUNES_LABEL" 
						description="JGLOBAL_FIELD_LUNES_DESC"
						>
							<option value="0">JNO</option>
							<option value="1">JYES</option>
					</field>

					<field name="ma" 
						type="list" 
						default="0" 
						label="JGLOBAL_FIELD_MARTES_LABEL" 
						description="JGLOBAL_FIELD_MARTES_DESC"
						>
							<option value="0">JNO</option>
							<option value="1">JYES</option>
					</field>
	  

					<field name="mi" 
						type="list" 
						default="0" 
						label="JGLOBAL_FIELD_MIERCOLES_LABEL" 
						description="JGLOBAL_FIELD_MIERCOLES_DESC"
						>
							<option value="0">JNO</option>
							<option value="1">JYES</option>
					</field>
	  
					<field name="ju" 
						type="list" 
						default="0" 
						label="JGLOBAL_FIELD_JUEVES_LABEL" 
						description="JGLOBAL_FIELD_JUEVES_DESC"
						>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>
	  
					<field name="vi" 
						type="list" 
						default="0" 
						label="JGLOBAL_FIELD_VIERNES_LABEL" 
						description="JGLOBAL_FIELD_VIERNES_DESC"
						>
	  						<option value="0">JNO</option>
							<option value="1">JYES</option>
					</field>
					<field name="sa" 
						type="list" 
						default="0" 
						label="JGLOBAL_FIELD_SABADO_LABEL" 
						description="JGLOBAL_FIELD_SABADO_DESC"
						>
	  						<option value="0">JNO</option>
							<option value="1">JYES</option>
					</field>
					<field name="do" 
						type="list" 
						default="0" 
						label="JGLOBAL_FIELD_DOMINGO_LABEL" 
						description="JGLOBAL_FIELD_DOMINGO_DESC"
						>
	  						<option value="0">JNO</option>
							<option value="1">JYES</option>
					</field>
					
		</fieldset>		
        <fieldset name="fecha_agenda">
						
		
		<field 		name="fecha_desde" 
					type="calendar"
					label="COM_TECNOMED_FIELD_FECHA_DESDE_LABEL" 
					description="COM_TECNOMED_FIELD_FECHA_DESDE_DESC"
					class="inputbox" 
					size="20" 
					format="%Y-%m-%d" 
					filter="user_utc" />
		
		<field 		name="fecha_hasta" 
					type="calendar"
					label="COM_TECNOMED_FIELD_FECHA_HASTA_LABEL" 
					description="COM_TECNOMED_FIELD_FECHA_HASTA_DESC"
					class="inputbox" 
					size="20" 
					format="%Y-%m-%d" 
					filter="user_utc" />			
                	
                	<field
	                name="periodo"
        	        type="list"
	                label="JFIELD_PERIODO_LABEL"
        	        description="JFIELD_PERIODO_DESC"
                	class="inputbox"
                	size="1"
                	default="10">
					<option value="10">10</option>
					<option value="15">15</option>
					<option value="20">20</option>
					<option value="30">30</option>
					
					</field>
 
  
		</fieldset>
		<fieldset name="horas">
						
		
		<field
	                name="hora_ini"
        	        type="list"
	                label="JFIELD_HORA_INI_LABEL"
        	        description="JFIELD_HORA_INI_DESC"
                	class="inputbox"
                	size="1"
                	default="07:00">
					<option value="07:00">07:00</option>
					<option value="08:00">08:00</option>
					<option value="09:00">09:00</option>
					<option value="10:00">10:00</option>
					<option value="11:00">11:00</option>
					<option value="12:00">12:00</option>
					<option value="13:00">13:00</option>
					<option value="14:00">14:00</option>
					<option value="15:00">15:00</option>
					<option value="16:00">16:00</option>
					<option value="17:00">17:00</option>
					<option value="18:00">18:00</option>
					<option value="19:00">19:00</option>
					<option value="20:00">20:00</option>
					<option value="21:00">21:00</option>
					<option value="22:00">22:00</option>
					
					</field>
		
			<field
	                name="hora_fin"
        	        type="list"
	                label="JFIELD_HORA_INI_LABEL"
        	        description="JFIELD_HORA_INI_DESC"
                	class="inputbox"
                	size="1"
                	default="22:00">
					<option value="22:00">22:00</option>
					<option value="21:00">21:00</option>
					<option value="20:00">20:00</option>
					<option value="19:00">19:00</option>
					<option value="18:00">18:00</option>
					<option value="17:00">17:00</option>
					<option value="16:00">16:00</option>
					<option value="15:00">15:00</option>
					<option value="14:00">14:00</option>
					<option value="13:00">13:00</option>
					<option value="12:00">12:00</option>
					<option value="11:00">11:00</option>
					<option value="10:00">10:00</option>
					<option value="09:00">09:00</option>
					<option value="08:00">08:00</option>
					<option value="07:00">07:00</option>
					
					</field>		

  
		</fieldset>

</form>
