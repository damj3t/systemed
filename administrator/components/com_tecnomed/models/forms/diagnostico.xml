<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset name="details">
			<field 
			name="id" 
			type="text" 
			default="0" 
			label="JGLOBAL_FIELD_ID_LABEL" 
			required="true"
			readonly="true" 
			class="readonly" />
			<field
			name="codigo"
			type="text"
			label="JFIELD_CODIGO_LABEL"
			description="JFIELD_CODIGO_DESC"
			class="inputbox"
			size="15"
			required="true"/>
			<field
			name="nombre"
			type="text"
			label="COM_TECNOMED_NOMBRE"
			description="COM_TECNOMED_NOMBRE_DESC"
			class="inputbox"
			size="40"
			required="true"/>
			<field
			name="grupoid"
			type="sql"
			multiple="false"
			size="1"
			label="JFIELD_GRUPO_LABEL"
			description="JFIELD_GRUPO_DESC"
			query="select id, nombre from #__tm_grupodiagnostico"
			key_field="id"
			value_field="nombre"
			default="0"
			required="true">
			<option value="">JOPTION_SELECT_ID</option>
			</field>              	
			<field 
			name="state" 
			type="list"
			label="JSTATUS" 
			description="COM_TECNOMED_FIELD_STATE_DESC"
			class="inputbox" 
			size="1" 
			default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
			</field>
		</fieldset>
</form>